<% for(const article of articles){ %>
<div class="card mt-3 mx-auto w-75" style="height: 250px;" >
  <div class="row g-0 h-100">
    <div class="col-md-4 h-100">
      <img src="/img/<%= article.picture %>" class="object-fit-cover h-100 w-100 rounded-start" alt="<%= article.picture_alt %>">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><span class="d-inline-block w-75"><%= article.title %></span> <span class="badge rounded-pill text-bg-primary float-end"><%= article.categorie_name %></span></h5>
        <p class="card-text"><%= article.content %></p>
        <p class="card-text"><small class="text-body-secondary">Publication : <%= new Date(article.creation).toLocaleDateString('fr-FR', { month: '2-digit', day: '2-digit', year: '2-digit', hour: '2-digit', minute: '2-digit' }) %></small></p>
      </div>
    </div>
  </div>
</div>
<% } %>
  