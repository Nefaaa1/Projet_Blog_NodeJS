
<a href="/categories/add"  class="btn btn-primary text-white m-2">Ajouter une catégorie</a>
<table class="table table-striped table-hover mt-3 w-50 mx-auto">
    <thead>
      <tr>
        <th scope="col">Titre</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
        <% for(const categorie of categories){ %>
            <tr>
                <th scope="row"><%= categorie.title %></th>
                <td>
                  <a href="/categories/edit/<%= categorie.id %>" class="btn btn-primary"><i class="fa-solid fa-pencil"></i></a>
                  <button class="btn btn-primary delete-btn" data-bs-toggle="modal" data-bs-target="#deleteModal<%= categorie.id %>"><i class="fa-solid fa-trash"></i></button>
                </td>
              </tr>
            <tr>
            <div class="modal" id="deleteModal<%= categorie.id %>" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Suppression d'une categorie</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Êtes vous sur de vouloir supprimer la catégorie ?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <form action="categorie/delete/<%= categorie.id %>" method="post">
                        <button type="submit" class="btn btn-primary">Oui</button>
                        </form>
                    </div>
                    </div>
                </div>
            </div>
          <% } %>
    </tbody>
  </table>